API_CIPHER_KEY=p1Ho11H3RtWiyTqfdcHSBzxcBdXdedAlb2SknB7SIQs=
API_KEY_EXPIRED_IN=365

# Mongodb
MONGODB_HOST=mongodb_host
MONGODB_PORT=mongodb_port
MONGODB_USER=mongodb_user
