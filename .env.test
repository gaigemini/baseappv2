# application host and port
APP_ENV=production
# For production or when published on a domain, use HTTPS, e.g., https://gai.co.id/gai-ai-service/
HOST=http://localhost:1899
PORT=1899
# Allowed domain for the refresh token. Set to localhost for development, and use the actual domain in production.
DOMAIN=baseapp.localhost

# JWT setting
JWT_SECRET_KEY=jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRED_IN=1440
JWT_REFRESH_EXPIRED_IN=7

